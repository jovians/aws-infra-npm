{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": false,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
  },
  "include": [
    "src/**/*.ts",
    "models/**/*.ts",
    "tests/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}